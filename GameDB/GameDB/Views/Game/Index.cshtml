@model IEnumerable<GameDB.Models.GameModel>

@{
    ViewData["Title"] = "GameDB";
}

<div class="text-center">
    <h1 class="display-5">Lista Gier</h1>
</div>

<p>
    <a asp-action="Add"class="btn btn-success">Dodaj grę</a>
</p>
<table class="table table-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rok)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rok)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producent)
            </td>
            <td>
                <a asp-action="Edit"class="btn btn-warning" asp-route-id="@item.ID">Edytuj</a> |
                <a asp-action="Details"class="btn btn-dark" asp-route-id="@item.ID">Szczegóły</a> |
                <a asp-action="Remove"class="btn btn-danger" asp-route-id="@item.ID">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
